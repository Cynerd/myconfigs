#!/usr/bin/env bash
set -eu

declare -a args
# Using SOCS:
if [ "${1:-}" = "socks" ]; then
	args+=("/proxy:socks5://127.0.0.1:8123")
fi

exec xfreerdp \
	"${args[@]}" \
	-decorations /w:1700 /h:1000 \
	/d:ELEKTROLINE /u:kkoci \
	/bpp:24 /audio-mode:0 /sound:sys:alsa /network:lan /rfx \
	+clipboard /port:3389 \
	/v:elvirt00.elektroline.cz /p:"$(pass elektroline.cz/kkoci)"
